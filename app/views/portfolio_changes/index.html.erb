<p id="notice"><%= notice %></p>

<h1>Listing Portfolio Changes</h1>

<table>
  <thead>
    <tr>
      <th>Date of Day</th>
      <th>Share</th>
      <th>Transaction type</th>
      <th>Quantity</th>
      <th>Price per share</th>
      <th>Total cost of order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_changes.each do |portfolio_change| %>
      <tr>
        <td><%= portfolio_change.date_of_day %></td>
        <td><%= link_to portfolio_change.share.name_isin, portfolio_change.share %></td>
        <td><%= portfolio_change.transaction_type %></td>
        <td><%= portfolio_change.quantity %></td>
        <td><%= number_to_currency portfolio_change.price_per_share, :unit => portfolio_change.share.currency, :precision => 3 %></td>
        <td><%= number_to_currency portfolio_change.total_cost_of_order, :unit => portfolio_change.share.currency, :precision => 2 %></td>
        <td><%= link_to 'Show', portfolio_change %></td>
        <td><%= link_to 'Edit', edit_portfolio_change_path(portfolio_change) %></td>
        <td><%= link_to 'Destroy', portfolio_change, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

