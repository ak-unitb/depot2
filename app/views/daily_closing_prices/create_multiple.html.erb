
<h1>Listing daily_closing_prices</h1>

<p id="notice"><%= @notice %></p>

<table>
  <tr>
    <th>Share</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @daily_closing_prices.each do |daily_closing_price| %>
  <tr>
    <td><%= daily_closing_price.share.name %> (<%= daily_closing_price.share.isin %>)</td>
    <td><%= daily_closing_price.price %> <%=daily_closing_price.share.currency %></td>
    <td><%= daily_closing_price.when %></td>
    <td><%= link_to 'Show', daily_closing_price %></td>
    <td><%= link_to 'Edit', edit_daily_closing_price_path(daily_closing_price) %></td>
    <td><%= link_to 'Destroy', daily_closing_price, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

