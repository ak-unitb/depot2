<h1>New daily_closing_prices</h1>

<%= form_tag(create_multiple_daily_closing_prices_path) do %>

	<table>
		<thead>
			<th>Share</th>
			<th>dailyClosingPrice</th>
		</thead>
		<tbody>
			<tr>
				<th><%= label_tag 'date[day]', 'When' %></th>
				<td><%= select_date(Time.now, :order => [:day, :month, :year]) %></td>
			</tr>
					
<% @daily_closing_prices.each_with_index do |daily_closing_price, index| %>
			<tr>
				<th><%= daily_closing_price.share.name_isin %></th>
	<%=  fields_for "daily_closing_prices[#{index}]", daily_closing_price do |f| %>
				<td><%=f.hidden_field :share_id %><%= f.text_field :price %></td>
	<% end %>
			</tr>
<% end %>
		</tbody>
	</table>

	<div class="actions">
		<%= submit_tag("Create all") %>
	</div>

<% end %>

	
<%= link_to 'Back', daily_closing_prices_path %>